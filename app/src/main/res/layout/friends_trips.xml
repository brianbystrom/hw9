<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="1">

    <TextView
        android:text="TextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/userTV"
        android:layout_marginTop="17dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/locationTV"
        android:layout_below="@+id/userTV"
        android:layout_alignLeft="@+id/userTV"
        android:layout_alignStart="@+id/userTV" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@color/common_google_signin_btn_text_light_disabled"
        android:id="@+id/userIV"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/userTV"
        android:layout_toEndOf="@+id/userTV"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:id="@+id/addIV"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/userIV"
        android:layout_toEndOf="@+id/userIV" />
</RelativeLayout>